{
  "name": "quokkadispatcher",
  "version": "1.0.0",
  "description": "External dispatch console for FiveM - radio and phone management",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron ."
  },
  "dependencies": {
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0"
  },
  "build": {
    "appId": "com.quokkadispatcher.app",
    "productName": "QuokkaDispatcher",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "assets/**/*"
    ]
  }
}
